<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!-- Cущность "Строения" -->
    <domain-object-type name="build_buildings">
        <fields>
            <string name="collection" length="1024"/>
            <string name="name" length="1024"/>
            <string name="description" length="1024"/>
        </fields>
    </domain-object-type>

    <!-- Cущность "Типы строений" -->
    <domain-object-type name="build_types">
        <fields>
            <!-- Описание типа строения -->
            <string name="name" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- Описание типа строения -->
            <string name="description" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
        </fields>

    </domain-object-type><!-- Cущность "Состояние" -->
    <domain-object-type name="build_status">
        <fields>
            <!-- Имя состояния -->
            <string name="name" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
            <!-- Описание состояния -->
            <string name="description" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
        </fields>
    </domain-object-type>

    <!-- Cущность "Жилое строение" -->
    <domain-object-type name="build_residential">
        <fields>
            <!-- Занимаемая площадь -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Ссылка на Тип-->
            <reference name="buildType" type="build_types" not-null="true">
            </reference>

            <!-- Ссылка на Состояние-->
            <reference name="buildStatus" type="build_status" not-null="true">
            </reference>

            <!-- Ссылка на сущность Коллекции-->
            <reference name="collection" type="build_buildings">
            </reference>
        </fields>
    </domain-object-type>

    <!-- Cущность "Нежилое капитальное строение" -->
    <domain-object-type name="build_nonresident_major">
        <fields>
            <!-- Занимаемая площадь -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Ссылка на Тип-->
            <reference name="buildType" type="build_types" not-null="true">
            </reference>

            <!-- Ссылка на Состояние-->
            <reference name="buildStatus" type="build_status" not-null="true">
            </reference>

            <!-- Ссылка на Коллекцию-->
            <reference name="collection" type="build_buildings">
            </reference>
        </fields>
    </domain-object-type>

    <!-- Cущность "Жилое нежилое некапитальное строение" -->
    <domain-object-type name="build_nonresident_minor">
        <fields>
            <!-- Занимаемая площадь -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Ссылка на Тип-->
            <reference name="buildType" type="build_types" not-null="true">
            </reference>

            <!-- Ссылка на Состояние-->
            <reference name="buildStatus" type="build_status" not-null="true">
            </reference>

            <!-- Ссылка на Коллекцию-->
            <reference name="collection" type="build_buildings">
            </reference>
        </fields>
    </domain-object-type>
</configuration>