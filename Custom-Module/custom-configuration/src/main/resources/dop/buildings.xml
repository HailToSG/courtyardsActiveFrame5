<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!-- Cущность "Строения" -->
    <domain-object-type name="build_buildings">
        <fields>
            <!-- Ссылка на "Жилые строения"-->
            <reference name="build_residential" type="build_residential" not-null="true">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!-- Ссылка на "Нежилые капитальные строения"-->
            <reference name="build_nonresident_major" type="build_nonresident_major" not-null="true">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

            <!-- Ссылка на "Нежилые некапитальные строения"-->
            <reference name="build_nonresident_minor" type="build_nonresident_minor" not-null="true">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </reference>

        </fields>
    </domain-object-type>

    <!-- Cущность "Типы строений" -->
    <domain-object-type name="build_types">
        <fields>
            <!-- Описание типа строения -->
            <string name="name" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>

            <!-- Описание типа строения -->
            <string name="description" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
        </fields>

    </domain-object-type><!-- Cущность "Состояние строения" -->
    <domain-object-type name="build_status">
        <fields>
            <!-- Имя состояния -->
            <string name="name" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
            <!-- Описание состояния -->
            <string name="description" length="1024">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </string>
        </fields>
    </domain-object-type>

    <!-- Cущность "Жилое строение" -->
    <domain-object-type name="build_residential">
        <fields>
            <!-- Площадь -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Ссылка на тип строения-->
            <reference name="buildType" type="build_types" not-null="true">
            </reference>

            <!-- Ссылка на статус строения-->
            <reference name="buildStatus" type="build_status" not-null="true">
            </reference>
        </fields>
    </domain-object-type>

    <!-- Cущность "Нежилое капитальное строение" -->
    <domain-object-type name="build_nonresident_major">
        <fields>
            <!-- Площадь -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Ссылка на тип строения-->
            <reference name="buildType" type="build_types" not-null="true">
            </reference>

            <!-- Ссылка на статус строения-->
            <reference name="buildStatus" type="build_status" not-null="true">
            </reference>
        </fields>
    </domain-object-type>

    <!-- Cущность "Жилое нежилое некапитальное строение" -->
    <domain-object-type name="build_nonresident_minor">
        <fields>
            <!-- Площадь -->
            <long name="area">
                <constraints>
                    <simple-constraint value="not-empty"/>
                </constraints>
            </long>

            <!-- Ссылка на тип строения-->
            <reference name="buildType" type="build_types">
            </reference>

            <!-- Ссылка на статус строения-->
            <reference name="buildStatus" type="build_status">
            </reference>
        </fields>
    </domain-object-type>
</configuration>