<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config" xmlns:act="https://cm5.intertrust.ru/config/action">

    <collection name="nonresident_major_collection" idField="id">
        <prototype>
            <![CDATA[
            SELECT
              major.id                 AS id,
              major.area               AS nonresident_major_area,
              major.type               AS nonresident_major_type,
              major.status             AS nonresident_major_status

            FROM build_nonresident_major major
            INNER JOIN build_type type ON type.id = major.type
            INNER JOIN build_status stat ON stat.id = major.description
            WHERE
              1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="nonresident_major_view" collection="nonresident_major_collection" is-default="true">
        <display>
            <column field="nonresident_major_area" name="Площадь" type="long" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="nonresident_major_type" name="Тип строения" type="string" editable="false"
                    sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="nonresident_major_status" name="Статус строения" type="string" editable="false"
                    sortable="true" min-width="50px" text-break-style="cut">
            </column>
        </display>
    </collection-view>

</configuration>